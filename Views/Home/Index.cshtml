
@model IEnumerable<Hotel> 


@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

<form asp-controller="Home" asp-action="CreateNewRecord" method="post">
            <div class="row">
                <div class="col">
                    <label for="Name" class="p-2">The Hotel Name</label>
                   
                    <input type="text" id="Name" name="Name" class="form-control form-control-sm" />
               <span class="text-danger"asp-validation-for="@Model.First().Name"> </span>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <label for="Address" class="p-2">The Hotel Address </label>
                    <input type="text" id="Address" name="Address" class="form-control form-control-sm" />
                <span class="text-danger" asp-validation-for="@Model.First().Address"> </span>

                </div>
                <div class="col-sm-6">
                    <label for="City" class="p-2">The Hotel City </label>  
                <input type="text" id="City" name="City" class="form-control form-control-sm" />
                <span class="text-danger" asp-validation-for="@Model.First().City"> </span>

            </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <label for="Email" class="p-2">Email </label>
                    <input type="email" id="Email" name="Email" class="form-control form-control-sm" />
                </div>


                <div class="col-sm-6">
                    <label for="Phone" class="p-2">Phone </label>
                    <input type="tel" id="Phone" name="Phone" class="form-control form-control-sm" />
                <span class="text-danger" asp-validation-for="@Model.First().Phone"> </span>

                </div>
            </div>


            <div class="row">
                <div class="col">
                    <label for="Images" class="p-2">The Hotel Image </label>
                    <input type="text" id="Images" name="Images" class="form-control form-control-sm" />
                <span class="text-danger" asp-validation-for="@Model.First().Images"> </span>

                </div>
            </div>


            <div class="row mt-3">
                <div class="col text-center">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>
            </div>

 </form>

 <hr/> 

    <div class="container">
        <div class="alert alert-danger">Filter hotels based on cities </div>
        <div class="row">
            <div class="col-sm-4">
               
                <form asp-action="Index" method="post">

                    <select class="form-control form-control" name="city" onchange="this.form.submit()">
                        <option value="0"> </option>
                        <option value="Riyadh"> Riyadh</option>
                        <option value="Jeedah"> Jeedah</option>
                        <option value="Hafr albatin"> Hafr albatin</option>
                        <option value="Alkhobar"> Alkhobar</option>
                    </select>

                </form>
            </div>
        </div>

 </div> 


@if (Model != null && Model.Any()){ 


<table class="table table-bordered mt-5">

    <thead>
            <tr class="text-center">
                <th>The hotel Number </th>
                <th>The hotel Name </th>
                <th>The hotel Address</th>
                <th>The hotel city </th>
                <th>Email </th>
                <th>Phone</th>
                <th colspan="2">Procedure</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr class="text-center">

                    <td> @item.Id </td>
                    <td> @item.Name</td>
                    <td> @item.Address</td>
                    <td> @item.City</td>
                    <td> @item.Email</td>
                    <td> @item.Phone</td>
                    <td> <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash text-danger"> </i> </a> </td>
                    <td> <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit text-success"> </i> </a> </td>

                </tr>

            }
        }
        
    </tbody>
</table>

 }
else
        {
<p class="mt-3 text-center">No hotels found for the specified city.</p>
        }
  



</div>
